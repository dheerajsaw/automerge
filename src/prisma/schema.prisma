datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Solution {
    solutionId      String   @unique
    orgId           String
    encodedSolution String
    createdAt       DateTime @default(now())
}

model Changes {
    solutionId String
    orgId      String
    actorId    String
    userId     String       @default("mychanges")
    changes    String[]
    status     ChangeStatus @default(UNMERGED)
    createdAt  DateTime     @default(now())

    @@unique([solutionId, actorId])
}

enum ChangeStatus {
    UNMERGED
    MERGED
}
